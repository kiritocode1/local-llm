{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    // Override for declaration building
    "skipLibCheck": true,
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    
    // Bundler mode needs adjustment for declaration emit
    "moduleResolution": "bundler",
    "isolatedModules": true,
    
    // Output format
    "target": "ESNext",
    "module": "ESNext"
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"]
}
